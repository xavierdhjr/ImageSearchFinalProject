<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("style", required: false)
    <style type="text/css">

    </style>
</head>
<body>
    <div class="nav">
        <h2>
            Image Search
        </h2>
        <div>
            <a href="@Url.Action("Index")">Home</a> | <a href="@Url.Action("Browse")">Browse Images</a> | <a href="@Url.Action("IndexDocuments")">Index Documents</a>
        </div>
        <div style="margin-top:30px;">
            <h2>Submit a Query</h2>
            <form id="homeForm" action="/Home/Query" method="post" enctype="multipart/form-data">
                <input type="file" name="queryImage" />
                Submit a query image: <input type="submit" />
            </form>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
